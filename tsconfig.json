{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/",
    "typeRoots": [
      "./src/types",
      "./src/types/client",
      "./node_modules/@types"
    ],
    "types": [
      "webpack-env",
      "jest",
      "node"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules",
    "src/types/server/**/*",
    "src/mock-data/**/*",
    "src/dev-entry.ts",
    "src/server/**/*",
    "src/server-entry.ts"
  ]
}
