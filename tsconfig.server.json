{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "serverBuild",
    "target": "es2015",
    "module": "commonjs",
    "sourceMap": true,
    "typeRoots": [
      "./src/types",
      "./src/types/server",
      "./node_modules/@types"
    ],
    "types": [
      "webpack-env",
      "jest",
      "node",
      "express"
    ],
    "lib": [
      "esnext"
    ]
  },
  "exclude": [
    "node_modules",
    "src/types/client/**/*",
    "src/mock-data/**/*",
    "src/dev-entry.ts",
    "src/client/**/*",
    "src/client-entry.ts",
    "src/server-entry.ts",
    "src/common/buildApp.ts"
  ]
}
